<%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |form| %>
  <% if @picture.errors.any? %>
  <div class="field row">
    <div class="col-sm-offset-3 col-sm-6">
      <div id="error_explanation">
        <ul class="row">
          <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
  <div class="field row">
    <div class="col-sm-offset-3 col-sm-6 post">
      <div>
        <%= form.label :image %>
      </div>
      <div class="input-post-info">
        <%= form.file_field :image, id: :feed_image %>
        <%= form.hidden_field :image_cache %>
      </div>
      <div>
        <%= form.label :content %>
      </div>
      <div class="input-post-info">
        <%= form.text_field :content %>
      </div>
      <div class="post-info">
        <%= form.submit "投稿", class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
